#check if a number is even
def is_even(x):
  if x % 2 == 0:
    return True
  else:
    return False
#check if a number is an integer
def is_int(x):
  if x - round(x) != 0:
    return False
  else:
    return True
#sum digits of a number
def digit_sum(n):
  n = str(n)
  s = []
  for x in n:
    x = int(x)
    s.append(x)
  return sum(s)
#factorial
def factorial(x):
  total = 1
  while x > 0:
    total *= x
    x -= 1
  return total
#check if a number is prime
def is_prime(x):
  if x < 2:
    return False
  elif x > 2:
    while x > 2:
      x = str(x)
      for n in (x):
        if int(x) % int(n) != 0:
          return False
  else:
    return True
#return a string in reverse
def reverse(text):
  x = 1
  s = ""
  while x < len(text) + 1:
    s += text[len(text)-x]
    x += 1
  return s
#remove vowels from a string
def anti_vowel(text):
  for x in text:
    if x in "aeiouAEIOU":
      text = text.replace(x, "")
  return text
