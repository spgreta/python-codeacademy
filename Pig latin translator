pyg = 'ay'

original = raw_input('Enter a word:')

if len(original) > 0 and original.isalpha():
  #if the word has a nonzero amount of letters
  word = original.lower()
  #make letters lowercase
  first = word[0]
  #take first letter of the word
  new_word = word + first + pyg
  #make a new word that includes the first letter with ay at the end of the word
  new_word = new_word[1:len(new_word)]
  #take off the first letter
  print 'Pig latin translation: ' + new_word
else:
  print 'empty'
